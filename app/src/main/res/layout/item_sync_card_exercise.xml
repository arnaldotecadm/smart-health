<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending_update"
                android:textAllCaps="true"
                android:textColor="@color/warning"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exercises"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_activity_recorded"
                android:textColor="?colorOnSurfaceVariant"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/readExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="@string/sync_now"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_upload" />
        </LinearLayout>

        <!-- Right Metric -->
        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_metric_card">

            <LinearLayout
                android:id="@+id/metricContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/metricIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_fitness"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/metricLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/running"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/metricProgress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
