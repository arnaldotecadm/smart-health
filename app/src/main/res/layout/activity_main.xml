<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <Button
        android:id="@+id/permissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Permission Fetch Steps" />

    <Button
        android:id="@+id/readStepsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read the steps" />

    <Button
        android:id="@+id/readExerciseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read the exercises" />

    <Button
        android:id="@+id/readSleepButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read the sleeps" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Press button to get steps" />

</LinearLayout>
